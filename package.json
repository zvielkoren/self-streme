{
  "name": "self-streme",
  "version": "1.0.0",
  "description": "Self-hosted streaming server with Stremio addon support",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "dev:docker": "docker-compose -f docker-compose.dev.yml up",
    "docker:build": "docker build -t self-streme .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "docker:shell": "docker-compose exec self-streme sh",
    "docker:health": "docker inspect --format='{{.State.Health.Status}}' self-streme",
    "test:tunnel": "./scripts/test-tunnel.sh",
    "test:health": "curl http://localhost:3000/health"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cheerio": "^1.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.3",
    "https-proxy-agent": "^7.0.6",
    "node-cache": "^5.1.2",
    "pump": "^3.0.0",
    "stremio-addon-sdk": "^1.6.10",
    "subsrt": "^1.1.1",
    "webtorrent": "^2.1.37",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}
